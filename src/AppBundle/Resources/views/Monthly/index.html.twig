                            <tr>
                                <th>{{ 'date'|trans }}</th>
                                <th>{{ 'category'|trans }}</th>
                                <th>{{ 'value'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr class="odd gradeX">
                                <td>Trident</td>
                                <td>Internet Explorer 4.0</td>
                                <td>Win 95+</td>
                            </tr>
                            <tr class="even gradeC">
                                <td>Trident</td>
